{
  "name": "universal-tracking-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant SaaS tracking system with audience management and platform integrations",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infrastructure/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "cd packages/database && supabase gen types typescript",
    "db:migrate": "cd packages/database && supabase db push",
    "infra:deploy": "cd infrastructure/aws && cdk deploy"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.5"
}
